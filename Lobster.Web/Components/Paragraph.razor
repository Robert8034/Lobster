
   <p class="paragraph" @onclick="@Click" >@Text </p>

@code {
    [Parameter]
    public string Text { get; set; } = "";

    [Parameter]
    public Func<Task> OnClick { get; set; }


    private async Task Click()
    {
        if (OnClick != null)
        {
            await OnClick.Invoke();
        }
    }
}
